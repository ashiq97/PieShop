@model UserRoleViewModel

    <h2> Add User to Role</h2>

    <form asp-controller="Admin" asp-action="AddUserToRole" method="post">
        <input type="hidden" name="roleId" value="@Model.RoleId"/>
        <select asp-for="UserId"
                asp-items="@(new SelectList(Model.Users,"Id","UserName"))">
            <option>Please select a user</option>
        </select>
        <input type="submit" class="btn btn-primary"  value="Add to role" />
    </form>
<a asp-action="RoleManagement" class="btn btn-primary">Done</a>